<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Movie Watchlist | Movies</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <span class="logo-circle me-2">MW</span>
        <span class="fw-semibold">Movie Watchlist</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/movies">Movies</a></li>
          <li class="nav-item"><a class="nav-link" href="/movies/new">Add Movie</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MOVIE LIST -->
  <main class="py-4">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 fw-semibold mb-0 text-light">My Movie Watchlist</h1>
        <a href="/movies/new" class="btn btn-success">➕ Add Movie</a>
      </div>

      <% if (movies.length === 0) { %>
        <div class="alert alert-info">
          No movies yet. Click <strong>"Add Movie"</strong> to create your first one.
        </div>
      <% } else { %>
        <div class="card bg-dark text-light border border-light shadow-soft">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-dark table-hover mb-0 align-middle">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Status</th>
                    <th>Platform</th>
                    <th>Rating</th>
                    <th>Fav</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% movies.forEach(movie => { %>
                    <tr>
                      <td>
                        <a href="/movies/<%= movie._id %>" class="text-decoration-none text-light">
                          <%= movie.title %>
                        </a>
                      </td>
                      <td><%= movie.genre || "-" %></td>
                      <td><%= movie.status || "-" %></td>
                      <td><%= movie.platform || "-" %></td>
                      <td><%= movie.rating || "-" %></td>
                      <td><%= movie.favorite ? "⭐" : "-" %></td>
                      <td class="text-end">
                        <a href="/movies/<%= movie._id %>/edit" class="btn btn-sm btn-outline-light me-1">Edit</a>
                        <form action="/movies/<%= movie._id %>?_method=DELETE"
                              method="POST"
                              class="d-inline"
                              onsubmit="return confirm('Delete this movie?');">
                          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
