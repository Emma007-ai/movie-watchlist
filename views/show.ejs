<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= movie.title %> | Movie Details</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <span class="logo-circle me-2">MW</span>
        <span class="fw-semibold">Movie Watchlist</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/movies">Movies</a></li>
          <li class="nav-item"><a class="nav-link" href="/movies/new">Add Movie</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MOVIE DETAILS -->
  <main class="py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="details-card shadow-soft">
            <h1 class="h4 fw-semibold mb-3">
              <%= movie.title %>
              <% if (movie.favorite) { %>
                <span class="badge bg-warning text-dark ms-2">Favourite ⭐</span>
              <% } %>
            </h1>

            <p><strong>Status:</strong> <%= movie.status || "N/A" %></p>
            <p><strong>Genre:</strong> <%= movie.genre || "N/A" %></p>
            <p><strong>Director:</strong> <%= movie.director || "N/A" %></p>
            <p><strong>Movie Set In (Year):</strong> <%= movie.year || "N/A" %></p>
            <p><strong>Runtime:</strong> <%= movie.runtimeMinutes ? movie.runtimeMinutes + " min" : "N/A" %></p>
            <p><strong>Language:</strong> <%= movie.language || "N/A" %></p>
            <p><strong>Platform:</strong> <%= movie.platform || "N/A" %></p>
            <p><strong>Rating:</strong> <%= movie.rating || "N/A" %></p>
            <p><strong>Watched:</strong> <%= movie.watched ? "Yes" : "No" %></p>

            <% if (movie.imdbUrl) { %>
              <p><strong>Link:</strong>
                <a href="<%= movie.imdbUrl %>" target="_blank" rel="noopener" class="text-info">
                  Open IMDb / Trailer
                </a>
              </p>
            <% } %>

            <% if (movie.notes) { %>
              <hr>
              <p><strong>Notes:</strong></p>
              <p><%= movie.notes %></p>
            <% } %>

            <hr>

            <div class="d-flex justify-content-between align-items-center">
              <a href="/movies" class="link-back">← Back to list</a>
              <div>
                <a href="/movies/<%= movie._id %>/edit" class="btn btn-sm btn-outline-light me-2">Edit</a>
                <form
                  action="/movies/<%= movie._id %>?_method=DELETE"
                  method="POST"
                  class="d-inline"
                  onsubmit="return confirm('Delete this movie?');">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
